# Auto detect text files and perform LF normalization
* text=auto

# JS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# CSS files must always use LF for tools to work
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# HTML files must always use LF for tools to work
*.html text eol=lf

# JSON files must always use LF for tools to work
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Graphics
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore 